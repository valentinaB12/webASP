@model Proyecto1.Models.compra

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<br />
<br />
<br />

<div>
    <h4>Detalle compra</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Fecha:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>

        <dt>
            Total:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.total)
        </dd>

        <dt>
            Usuario:
        </dt>

        <dd>
            @Proyecto1.Controllers.CompraController.NombreUsuario(Model.id_usuario)
        </dd>

        <dt>
            Cliente:
        </dt>

        <dd>
            @Proyecto1.Controllers.CompraController.NombreCliente(Model.id_cliente)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Volver a la Lista", "Index")
</p>
